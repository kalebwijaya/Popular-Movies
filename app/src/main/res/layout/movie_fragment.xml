<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.MovieFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_popular_movie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"
        android:elevation="6dp"
        app:fab_labelStyle="@style/custom_fab"

        >

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_popluarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_title="Sort By Popularity"
            app:fab_stroke_visible="true"
            app:fab_icon="@android:drawable/ic_menu_sort_by_size"
            app:fab_size="mini"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/white"
            app:fab_title="Sort By Rating"
            app:fab_icon="@android:drawable/ic_menu_sort_by_size"
            app:fab_size="mini"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>



</FrameLayout>